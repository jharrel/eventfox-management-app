<h1>Projects</h1>

<div>
<h4>Search for a Project</h4>

<%= form_tag projects_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>
</div>



<br>

  <% @projects.all.each do |project| %>
    <div class="container">


    <h2>  <%= link_to "#{project.name}", project_path(project)%></h2>

    <% tasks = project.tasks %>

      <%= render partial: 'tasks/tasklist', :locals => {:@tasks => tasks}%>
    </div>
  <% end  %>
